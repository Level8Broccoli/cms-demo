{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "tasks": {
    "generate": "deno run --allow-write --allow-read generator/generator.ts",
    "build": "deno run --allow-read --allow-env --allow-sys --allow-ffi --allow-run --allow-write npm:vite build",
    "serve": "deno run --allow-net --allow-read --allow-write cms/server.ts"
  },
  "imports": {
    "#/": "./",
    "@deno-plc/vite-plugin-deno": "jsr:@deno-plc/vite-plugin-deno@^2.1.7",
    "@preact/signals": "npm:@preact/signals@^1.3.0",
    "@prefresh/vite": "npm:@prefresh/vite@^2.4.6",
    "@std/http": "jsr:@std/http@^1.0.8",
    "@tiptap/core": "npm:@tiptap/core@^3.0.0",
    "@tiptap/pm": "npm:@tiptap/pm@^3.0.0",
    "@tiptap/starter-kit": "npm:@tiptap/starter-kit@^3.0.0",
    "preact": "npm:preact@^10.24.2",
    "preact-render-to-string": "npm:preact-render-to-string@^6.5.11",
    "vite": "npm:vite@^5.2.12"
  },
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": [
      "deno.window",
      "deno.ns",
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "DOM.AsyncIterable",
      "webworker"
    ]
  }
}
